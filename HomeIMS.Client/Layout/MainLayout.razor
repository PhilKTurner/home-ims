@using HomeIMS.Client.Pages.Identity

@inherits LayoutComponentBase

<MudLayout>
    <TopAppBar @bind-DrawerOpen="@_drawerOpen" />
    <AuthorizeView>
        <Authorized>
            <MudDrawer @bind-Open="@_drawerOpen">
                <NavMenu />
            </MudDrawer>
            <MudMainContent>
                @Body
            </MudMainContent>
            <BottomAppBar />
        </Authorized>
        <NotAuthorized>
            <MudMainContent>
                <Login />
            </MudMainContent>
        </NotAuthorized>
    </AuthorizeView>
</MudLayout>

@code {
    bool _drawerOpen = true;
}